# Frontend
# Frontend Environment Variables
# Copy this file to .env and fill with your values

# API URL (default: /api for proxy, or http://localhost:5000/api for direct)
VITE_API_URL=/api

# Socket.io URL (optional, defaults to API_URL)
# VITE_SOCKET_URL=http://localhost:5000

# Backend
NODE_ENV=development
PORT=5000
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vakans
REDIS_URL=redis://localhost:6379
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key
CORS_ORIGIN=http://localhost:3000
