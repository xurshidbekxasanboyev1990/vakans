# ===========================================
# Vakans.uz Backend Environment Variables
# ===========================================

# App
NODE_ENV=development
PORT=5000
APP_NAME=Vakans.uz
APP_VERSION=1.0.0

# Database - PostgreSQL
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/vakans?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Socket.io
SOCKET_CORS_ORIGIN=http://localhost:3000
